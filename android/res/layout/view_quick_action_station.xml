<?xml version="1.0" encoding="utf-8"?>
<com.happytap.schedule.view.RelativeLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:atbat="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/QuickActionMenu_upArrow" >

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/user_details_activity_general"
            android:paddingBottom="15dp"
            android:paddingLeft="40dp"
            android:divider="@null"
            android:paddingRight="40dp"
            android:paddingTop="15dp" />
    </RelativeLayout>

    <com.happytap.schedule.view.Triangle
        android:id="@id/QuickActionMenu_upArrow"
        android:layout_width="24dp"
        android:layout_height="13dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-2dp"
        android:visibility="invisible"
        atbat:borderColor="#00000000"
        atbat:rotate="0"
        atbat:color="@color/user_details_activity_general" />

    <com.happytap.schedule.view.Triangle
        android:id="@+id/QuickActionMenu_downArrow"
        android:layout_width="24dp"
        android:layout_height="13dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/container"
        android:layout_marginTop="-2dp"
        atbat:borderColor="#00000000"
        atbat:rotate="180"
        atbat:color="@color/user_details_activity_general" />

</com.happytap.schedule.view.RelativeLayoutCompat>