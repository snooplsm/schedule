<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#000"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true">

		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/created_by"
			android:gravity="center"
			android:textColor="@color/white"
			android:layout_marginBottom="40dip"
			android:text="created by:"/>
		/>

		<TextView
			android:id="@+id/ryan"
			android:gravity="center"
			android:layout_width="fill_parent"
			android:textColor="@drawable/color_selector"
			android:textSize="40dip"
			android:layout_height="wrap_content"
			android:layout_below="@id/created_by"
			
			android:text="Ryan Gravener"/>
		/>

		<TextView
			android:layout_marginTop="10dip"
			android:id="@+id/doug"
			android:gravity="center"
			android:textSize="40dip"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textColor="@drawable/color_selector"
			android:layout_below="@id/ryan"
			android:text="Doug Tangren"/>
		/>

		<TextView
			android:layout_marginTop="40dip"
			android:id="@+id/in_association_with"
			android:gravity="center"
			android:textColor="@color/white"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/doug"
			android:text="in association with:"/>
		/>

		<TextView
			android:layout_marginTop="10dip"
			android:id="@+id/happytap"
			android:gravity="center"
			android:textSize="40dip"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/in_association_with"
			android:textColor="@drawable/color_selector"
			android:text="Happy Tap"/>
		/>
		
		<TextView
			android:layout_marginTop="40dip"
			android:id="@+id/no_affiliation"
			android:gravity="center"
			android:textColor="@color/white"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/happytap"
			android:text="no affiliation with:"/>
		/>

		<TextView
			android:layout_marginTop="10dip"
			android:id="@+id/company_name"
			android:gravity="center"
			android:textSize="40dip"
			android:textColor="@drawable/color_selector"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/no_affiliation"
			android:text="@string/establishment"/>
		/>

	</RelativeLayout>

</RelativeLayout>
