<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/white">

	<RelativeLayout
		android:id="@+id/departure"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="2dip"
		android:focusable="true"
		android:clickable="true"
		android:background="@drawable/user_details_activity_general_selector">

		<ImageView
			android:layout_width="40dip"
			android:layout_height="40dip"
			android:id="@+id/reverse"
			android:layout_marginRight="10dip"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"/>


		<LinearLayout
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/station_container">
			<TextView
				android:id="@+id/departureText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="15dip"
				android:gravity="center_vertical"
				android:text="Departure Station"
				android:paddingLeft="2dip"
				android:paddingTop="3dip"
				android:textAppearance="@style/TextViewStyleUserDetailsActivityGeneralTitle"/>

			<TextView
				android:id="@+id/arrivalText"
				android:layout_below="@id/departureText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="15dip"
				android:gravity="center_vertical"
				android:text="Arrival Station"
				android:paddingLeft="2dip"
				android:paddingTop="3dip"
				android:textAppearance="@style/TextViewStyleUserDetailsActivityGeneralTitle"/>
		</LinearLayout>

		<TextView
			android:text="to"
			android:textSize="16dip"
			android:gravity="center_vertical"
			android:textAppearance="@style/TextViewStyleUserDetailsActivityGeneralTitle"
			android:layout_width="30dip"
			android:paddingLeft="10dip"
			android:layout_height="30dip"
			android:layout_toRightOf="@id/station_container"
			android:layout_centerVertical="true"/>


	</RelativeLayout>

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<LinearLayout
			android:id="@+id/ad_layout"
			android:layout_height="wrap_content"
			android:background="@color/white"
			android:layout_width="fill_parent"
			android:layout_alignParentBottom="true">
			<TextView
				android:id="@+id/ad_fodder"
				android:textSize="40dip"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="AD GOES HERE"/>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/foo"
			android:layout_width="fill_parent"
			android:layout_above="@android:id/list"
			android:background="@color/black"
			android:layout_alignParentTop="true"
			android:layout_height="100dip"></LinearLayout>


		<ListView
			android:id="@+android:id/list"
			android:background="@color/white"
			style="@android:style/Theme.Light"
			android:cacheColorHint="#FFFFFFFF"
			android:layout_width="fill_parent"
			android:layout_above="@id/ad_layout"
			android:layout_height="fill_parent"/>
	</RelativeLayout>
</LinearLayout>